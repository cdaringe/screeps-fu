{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "ESNext",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": false,
    "declaration": false,
    "strict": true,
    "allowSyntheticDefaultImports": false,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": false,
    "types": ["node", "screeps"]
  },
  "exclude": ["node_modules", "test"]
}
